{
    "name": "preceding-tag-action",
    "description": "Finds the most recent tag matching the given pattern that is reachable from this commit.",
    "license": "MIT",
    "author": "AJ Granowski",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "bundle": "node esbuild.config.mjs",
        "check-types": "tsc -noEmit",
        "format": "eslint --fix",
        "fuzz": "vitest run --project fuzz",
        "lint": "eslint",
        "pr-checks": "npm run check-types && npm run lint && npm run test && npm run bundle",
        "run-bundle": "node dist/index.js",
        "test": "vitest run --project unit"
    },
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.1",
        "@octokit/rest": "^22.0.0"
    },
    "devDependencies": {
        "@types/node": "^24.5.0",
        "@vitest/coverage-v8": "^3.2.4",
        "esbuild": "^0.25.9",
        "eslint": "^9.35.0",
        "fast-check": "^4.3.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0",
        "vitest": "^3.2.4",
        "vitest-mock-extended": "^3.1.0"
    }
}
